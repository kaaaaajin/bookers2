<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= render 'info' %>
   
      <div class="field">
        <h1>New book</h1>
        <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
       <%= f.text_area :body %>
       <%= f.submit 'Create Book' %>
       <% end %>
      </div>
    </div>
     <div class="col-lg-8 ml-5">
       <h1>Books</h1>
       <table class="table">
         <thead>
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
           </tr>
         </thead>
         <tbody>
           <% @books.each do |book| %>
           <tr>
             <td><%= image_tag book.user.get_profile_image(80,80) %></td>
             <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
             <td><%= book.body %></td>
           </tr>
           <% end %>
         </tbody>
       </table>
     </div> 
  </div>
 </div>
