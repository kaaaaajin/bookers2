<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= render 'info' %>
   
      <div class="field">
        <h1>New book</h1>
      </div>
    </div>
      <div class="col-lg-8 ml-5">
        <h1>Book detail</h1>
        <table class="table">
          <tbody>
            <tr>
              <td><%= image_tag @book.user.get_profile_image(100,100) %><br>
                  <%= link_to user_path(@book.user.id) do %><%= @book.user.name %><% end %></td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td><% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book) %><% end %></td>
              <td><% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path(@book), method: :delete %><% end %></td>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
</div> 