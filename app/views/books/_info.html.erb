 <h1>User info</h1>
　    <%= image_tag user.get_profile_image(100,100) %>
　    <table class="table">
      <tbody>
      <tr>
        <td>name</td>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
   </table>
   <div class="button">
   <%= link_to edit_user_path(user.id) do %>
   <button type="button" class="btn btn-outline-secondary w-100">
     <i class="fas fa-user-cog"></i></button><% end %>

   <div class="field">
        <h1>New book</h1>
        <%= form_with model: Book.new do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
       <%= f.text_area :body %>
       <%= f.submit 'Create Book' %>
       <% end %>
   </div>

