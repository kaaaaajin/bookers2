<h1>User info</h1>
　 <%= image_tag current_user.get_profile_image(100,100) %>
  <h3>name <%= current_user.name %></h3>
  <h3>introduction　<%= current_user.introduction %></h3>
  <h3><%= link_to '編集', edit_user_path(current_user.id) %></h3>
  
<h1>New book</h1>
  <%= form_with model: @book do |f| %>
  
    <h4>Title</h4>
      <%= f.text_field :title %>
      
    <h4>Opinion</h4>
      <%= f.text_area :body %>
      
    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Books</h1>
  <table class="table table-striped">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(80,80) %></td>
        <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
   </table>
   
   
   